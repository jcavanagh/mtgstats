{{partial "header"}}

<div class="container-fluid">
<div class="row">
    <form class="form-horizontal" role="form">
        <div class="col-sm-2">
            <div class="form-group">
                <label class="col-sm-4 control-label">White</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="white">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Blue</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="blue">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Black</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="black">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Red</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="red">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Green</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="green">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Optimize</button>
        </div>
        <div class="col-sm-8">
                {{view MTGS.ManaCheckboxView contentBinding="lands" selectedLandsBinding="selectedLands"}} 
            </div>
        </div>
    </form>
</div>
</div>

{{partial "footer"}}